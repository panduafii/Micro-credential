{
  "openapi": "3.1.0",
  "info": {
    "title": "MicroCred",
    "version": "0.1.0"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "Observability"
        ],
        "summary": "Service health probe",
        "description": "Return basic service and datastore status information.",
        "operationId": "health_check_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "Response Health Check Health Get"
                }
              }
            }
          }
        }
      }
    },
    "/tracks": {
      "get": {
        "tags": [
          "Tracks"
        ],
        "summary": "List Tracks",
        "description": "Return available planning tracks/roles along with question counts.",
        "operationId": "list_tracks_tracks_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TracksResponse"
                }
              }
            }
          }
        }
      }
    },
    "/assessments/start": {
      "post": {
        "tags": [
          "Assessments"
        ],
        "summary": "Start Assessment",
        "operationId": "start_assessment_assessments_start_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AssessmentStartRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentStartResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "AssessmentQuestion": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id"
          },
          "sequence": {
            "type": "integer",
            "title": "Sequence"
          },
          "question_type": {
            "type": "string",
            "title": "Question Type"
          },
          "prompt": {
            "type": "string",
            "title": "Prompt"
          },
          "metadata": {
            "anyOf": [
              {
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Metadata"
          },
          "response": {
            "anyOf": [
              {
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Response"
          }
        },
        "type": "object",
        "required": [
          "id",
          "sequence",
          "question_type",
          "prompt"
        ],
        "title": "AssessmentQuestion"
      },
      "AssessmentStartRequest": {
        "properties": {
          "role_slug": {
            "type": "string",
            "title": "Role Slug",
            "description": "Role/track identifier to start or resume"
          }
        },
        "type": "object",
        "required": [
          "role_slug"
        ],
        "title": "AssessmentStartRequest"
      },
      "AssessmentStartResponse": {
        "properties": {
          "assessment_id": {
            "type": "string",
            "title": "Assessment Id"
          },
          "status": {
            "type": "string",
            "title": "Status"
          },
          "role": {
            "$ref": "#/components/schemas/TrackItem"
          },
          "questions": {
            "items": {
              "$ref": "#/components/schemas/AssessmentQuestion"
            },
            "type": "array",
            "title": "Questions"
          }
        },
        "type": "object",
        "required": [
          "assessment_id",
          "status",
          "role",
          "questions"
        ],
        "title": "AssessmentStartResponse"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "TrackItem": {
        "properties": {
          "slug": {
            "type": "string",
            "title": "Slug"
          },
          "name": {
            "type": "string",
            "title": "Name"
          },
          "description": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Description"
          },
          "question_count": {
            "type": "integer",
            "title": "Question Count"
          }
        },
        "type": "object",
        "required": [
          "slug",
          "name",
          "question_count"
        ],
        "title": "TrackItem"
      },
      "TracksResponse": {
        "properties": {
          "tracks": {
            "items": {
              "$ref": "#/components/schemas/TrackItem"
            },
            "type": "array",
            "title": "Tracks"
          }
        },
        "type": "object",
        "required": [
          "tracks"
        ],
        "title": "TracksResponse"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "HTTPBearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}